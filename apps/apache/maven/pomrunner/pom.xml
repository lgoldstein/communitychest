<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
			     http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>net.community.apps.apache.maven</groupId>
		<artifactId>parent</artifactId>
		<version>1.8.1.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>pomrunner</artifactId>
	<packaging>jar</packaging>
	<name>POM Runner Applications</name>

	<dependencies>
		<dependency>
			<groupId>net.community.chest.base-utils</groupId>
			<artifactId>chest-jdk</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.chest.base-utils</groupId>
			<artifactId>chest-io</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.chest.base-utils</groupId>
			<artifactId>chest-logging</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.chest.gui</groupId>
			<artifactId>chest-gui-awt</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.chest.gui</groupId>
			<artifactId>chest-gui-swing</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.chest.gui</groupId>
			<artifactId>chest-gui-helpers</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.chest.gui</groupId>
			<artifactId>chest-gui-components</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.chest.3rd-party.apache.maven</groupId>
			<artifactId>chest-maven-helpers</artifactId>
		</dependency>
		<dependency>
			<groupId>net.community.apps</groupId>
			<artifactId>chest-apps-common</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>${project.name}</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
