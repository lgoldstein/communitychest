<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>JMX Web Exposed</display-name>
    <description>Exposes the JMX (read-only) via a servlet</description>

    <servlet>
        <servlet-name>ExposedJMXServlet</servlet-name>
        <servlet-class>net.community.apps.tomcat.jmx.ExposedJMXServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

      <servlet-mapping>
        <servlet-name>ExposedJMXServlet</servlet-name>
        <url-pattern>/ExposedJMXServlet</url-pattern>
      </servlet-mapping>

      <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
